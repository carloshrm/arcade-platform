@page "/"
@layout MainLayout

<PageTitle>Snake Game</PageTitle>

<header class="toast-header light-bg">
    <h3>Classic Games written for Web in C# with Blazor ASP.NET</h3>
</header>

<main class="d-flex flex-row">
<div class="card" style="width: 20rem;">
    <img class="card-img-top" src="/img/sg.png" alt="Snake Game Image">
    <div class="card-body">
        <h5 class="card-title">Fastsnake</h5>
        <p class="card-text">Classic snake game just a little bit faster.</p>
        <a href="/snakegame" class="btn btn-primary">Play!</a>
        <a href="https://github.com/carloshrm/blazorSnake" class="btn btn-link"> View source on Github. </a>
    </div>
</div>

<div class="card" style="width: 20rem;">
    <img class="card-img-top" src="" alt="Invaders Game Image">
    <div class="card-body">
        <h5 class="card-title">Invaders</h5>
        <p class="card-text">Space Invaders</p>
        <a href="/invaders" class="btn btn-primary disabled">Play!</a>
        <a href="https://github.com/carloshrm/blazorSnake" class="btn btn-link"> View source on Github. </a>
    </div>
</div>
</main>

<footer id="index-footer" class="modal-footer light-bg">
    <p>Made by Carlos Moraes.</p>
    <a href="https://github.com/carloshrm/blazorSnake" class="btn btn-link"> Source </a>
</footer>
